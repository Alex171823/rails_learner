<style>
  .seats {
      display: none;
  }
</style>

<%= form_with(model: [:admin, wagon.becomes(Wagon)], url: url, method: method) do |form| %>
  <%= render 'common/error', resource: wagon%>
  <div>
    <%= form.label :number, 'Number', style: "display: block" %>
    <%= form.text_field :number %>
  </div>
  <div>
    <%= form.label :type, 'Type', style: "display: block" %>
    <%= form.select :type, options_for_select(Wagon.wagon_types.invert, wagon.type), id: 'wagon-type-chooser' %>
  </div>
  <div id="top_seats" class="seats">
    <%= form.label :top_seats, 'Amount of top places', style: "display: block" %>
    <%= form.number_field :top_seats, :min => 0 %>
  </div>
  <div id="bottom_seats" class="seats">
    <%= form.label :bottom_seats, 'Amount of lower places', style: "display: block" %>
    <%= form.number_field :bottom_seats, :min => 0 %>
  </div>
  <div id="side_top_seats" class="seats">
    <%= form.label :side_top_seats, 'Amount of side top places', style: "display: block" %>
    <%= form.number_field :side_top_seats, :min => 0 %>
  </div>
  <div id="side_bottom_seats" class="seats">
    <%= form.label :side_bottom_seats, 'Amount of side lower places', style: "display: block" %>
    <%= form.number_field :side_bottom_seats, :min => 0 %>
  </div>
  <div id="sitting-seats" class="seats">
    <%= form.label :sitting_seats, 'Amount of sitting places', style: "display: block" %>
    <%= form.number_field :sitting_seats, :min => 0 %>
  </div>
  <div class="field" class="seats">
    <%= form.label :train, 'Train' %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>