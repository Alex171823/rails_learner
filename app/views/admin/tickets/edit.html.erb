<%= form_with(model: [:admin, @ticket]) do |form| %>
  <%= render 'common/error', resource: @ticket %>
  <div>
    <%= form.label :name, 'First name, last name', style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :passport, 'Passport', style: "display: block" %>
    <%= form.text_field :passport %>
  </div>
  <div>
    <%= form.collection_select :train_id, Train.all, :id, :number, {}, { multiple: false   } %>
  </div>
  <%= hidden_field_tag 'user', @ticket.user.id  %>
  <div>
    <%= form.submit %>
  </div>
<% end %>