<%= form_with model: [:admin, station], html: { id: "edit-form-#{station.id}", style: "display: #{hidden ? 'none' : 'block' }"} do |form| %>
  <%= render 'common/error', resource: station %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.submit t('.submit', action: station.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>
